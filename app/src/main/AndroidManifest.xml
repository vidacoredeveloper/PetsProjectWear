<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.coursera.petsproject">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ico_huella"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activities.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.PetLikeActivity"
            android:parentActivityName=".activities.MainActivity">

            <!-- Soporte para versiones anteriores a 4.0 -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activities.MainActivity" />
        </activity>
        <activity
            android:name=".activities.ContactActivity"
            android:parentActivityName=".activities.UserEmailActivity">

            <!-- Soporte para versiones anteriores a 4.0 -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activities.UserEmailActivity" />
        </activity>
        <activity
            android:name=".activities.AboutActivity"
            android:parentActivityName=".activities.MainActivity">

            <!-- Soporte para versiones anteriores a 4.0 -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activities.MainActivity" />
        </activity>
        <activity
            android:name=".activities.UserEmailActivity"
            android:parentActivityName=".activities.MainActivity">

            <!-- Soporte para versiones anteriores a 4.0 -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activities.MainActivity" />
        </activity>
        <activity
            android:name=".activities.ConfigurationActivity"
            android:parentActivityName=".activities.MainActivity">

            <!-- Soporte para versiones anteriores a 4.0 -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activities.MainActivity" />
        </activity>
        <activity
            android:name=".activities.UserProfileActivity"
            android:parentActivityName=".activities.MainActivity">

            <!-- Soporte para versiones anteriores a 4.0 -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activities.MainActivity" />
        </activity>

        <activity
            android:name=".activities.CurrentConfigurationActivity"
            android:parentActivityName=".activities.MainActivity">

            <!-- Soporte para versiones anteriores a 4.0 -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activities.MainActivity" />
        </activity>

        <service android:name=".notifications.NotificationService">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>
        <service android:name=".notifications.NotificationIDTokenService">
            <intent-filter>
                <action android:name="com.google.firebase.INSTANCE_ID_EVENT" />
            </intent-filter>
        </service>

        <receiver android:name=".firebase.model.RegistrarSeguir">
            <intent-filter>
                <action android:name="FOLLOW"/>
            </intent-filter>
        </receiver>

    </application>

</manifest>