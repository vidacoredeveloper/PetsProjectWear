<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_current_configuration"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="org.coursera.petsproject.activities.CurrentConfigurationActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <include
        android:id="@+id/ltbActCurConf"
        layout="@layout/layout_toolbar"/>

        <TextView
            android:id="@+id/tvUserConfigKeyACC"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/activity_current_configuration_tvUserConfigKeyACC_text"
            android:textSize="@dimen/activity_current_configuration_tvUserConfigKeyACC_text_size"
            android:textStyle="bold"
            android:textAlignment="center"
            android:layout_marginTop="@dimen/activity_current_configuration_tvUserConfigKeyACC_margin_top"/>

        <TextView
            android:id="@+id/tvLabConfigKeyACC"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/activity_current_configuration_tvUserConfigKeyACC_text"
            android:textSize="@dimen/activity_current_configuration_tvLabConfigKeyACC_text_size"
            android:textAlignment="center"
            />

        <TextView
            android:id="@+id/tvUserConfigDispACC"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/activity_current_configuration_tvUserConfigDispACC_text"
            android:textSize="@dimen/activity_current_configuration_tvUserConfigDispACC_text_size"
            android:layout_marginTop="@dimen/activity_current_configuration_tvUserConfigDispACC_text_size"
            android:textStyle="bold"
            android:textAlignment="center"/>

        <TextView
            android:id="@+id/tvLabConfigDispACC"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/activity_current_configuration_tvUserConfigKeyACC_text"
            android:textSize="@dimen/activity_current_configuration_tvLabConfigDispACC_text_size"
            android:textAlignment="center"
            />


        <Button
            android:id="@+id/btnNewConftigACC"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/about_activity_text_size"
            android:text="@string/activity_current_configuration_btnNewConftigACC_text"
            android:layout_marginTop="@dimen/contact_activity_btnSendContactAC_margin_top"
            android:onClick="goNewConfiguration"
            android:theme="@style/BtnSend"/>

    </LinearLayout>



</android.support.design.widget.CoordinatorLayout>
